                                {{#ifEquals singlenews.post_category "article"}}
                                <p class="author">By {{singlenews.post_summary}}</b></p>
                                {{else}}
                                <p class="author">By {{singlenews.author}} - {{substr "16" singlenews.update_date}}</b></p>
                                {{/ifEquals}}
                                    <div class="col-lg-12 img">
                                        <img src="{{singlenews.post_image}}" alt="{{sinlenews.post_name}}"/><br>
                                        {{!-- <p class="author" style="text-transform: capitalize">{{singlenews.post_category}} Report</p> --}}
                                        <div class="sharethis-inline-share-buttons" style="margin-top:10px;"></div>
                                    </div>
                                    <h4 style="font-family: 'Droid Serif';">{{{singlenews.post_summary}}}</h4>
                                    <div class="singlenews" style="text-align: justify;">
                                        {{{singlenews.post_content}}}
                                    </div>
                        </div>  
                        <div class="col-lg-4">
                            <h2>Related News</h2>
                            <div class="row">
                                <div class="col-sm-12">

                                  {{#each relatedNews}}
                                    <div class="border-bottom pb-4 pt-4">
                                        <div class="row">
                                            <div class="col-sm-8">
                                               <a href="/{{post_category}}/{{post_url}}">
                                                  <h5 class="font-weight-600 mb-1" style="font-family: 'Droid Serif';">{{substr "40" post_name}}</h5>
                                               </a> 
                                                <p class="fs-13 text-muted mb-0">
                                                <span class="me-2" style="font-family: 'Droid Serif';">{{substr "25" update_date}}</span>
                                                </p>
                                            </div>
                                            <div class="col-sm-4">
                                                <div class="rotate-img">
                                                    <img src="{{post_image}}" alt="{{post_name}}" class="img-fluid"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    {{/each}}

                                    

                                </div>
                            </div>
                        </div>
                    </div>







</div>
